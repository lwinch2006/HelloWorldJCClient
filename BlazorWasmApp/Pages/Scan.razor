@inherits Fluxor.Blazor.Web.Components.FluxorComponent
@page "/"
<PageTitle>Scan</PageTitle>

@if (!string.IsNullOrWhiteSpace(AppStore.ErrorMessage))
{
    <p>@AppStore.ErrorMessage</p>
}
else
{
    <ReadOnlyUserDetails CssStyle="margin-top: 2rem;" User="@AppStore.UserRead" Time="@AppStore.Elapsed" Refresh="@Refresh"/>
    if (AppStore.IsLoading)
    {
        <div class="card progressbar-container">
            <div class="card-body d-flex justify-content-center align-items-center">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>
    }
}